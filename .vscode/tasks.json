{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Backend Dependencies",
      "type": "shell",
      "command": "uv sync --no-install-project",
      "options": {
        "cwd": "${workspaceFolder}/agent-rl/api"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Run Backend (uv)",
      "type": "shell",
      "command": "uv run uvicorn main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/agent-rl/api"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Uvicorn running.*$",
          "endsPattern": "^.*Application startup complete.*$"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Backend Tests",
      "type": "shell",
      "command": "uv run pytest",
      "options": {
        "cwd": "${workspaceFolder}/agent-rl/api"
      },
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Format Backend Code (Ruff)",
      "type": "shell",
      "command": "uv run ruff format .",
      "options": {
        "cwd": "${workspaceFolder}/agent-rl/api"
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Lint Backend Code (Ruff)",
      "type": "shell",
      "command": "uv run ruff check .",
      "options": {
        "cwd": "${workspaceFolder}/agent-rl/api"
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Type Check Backend (Mypy)",
      "type": "shell",
      "command": "uv run mypy .",
      "options": {
        "cwd": "${workspaceFolder}/agent-rl/api"
      },
      "problemMatcher": [],
      "group": "none"
    }
  ]
}

